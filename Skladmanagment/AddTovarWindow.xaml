<Window x:Class="Skladmanagment.AddTovarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skladmanagment"
        mc:Ignorable="d"
        Title="Добавить товар" Height="215" Width="800" ResizeMode="NoResize">
    <Grid Margin="0,0,0,304">
        <StackPanel Margin="5,10,15,-162">
            <TextBox x:Name="txtName" Margin="0 0 0 10" Text="Название" />
            <TextBox x:Name="txtQuantity" Margin="0 0 0 10" Text="Количество" />
            <TextBox x:Name="txtPrice" Margin="0 0 0 10" Text="Цена" />

            <!-- Выпадающий список для поставщиков -->
            <ComboBox x:Name="cmbSuppliers" Margin="0 0 0 10" />

            <Button Content="Добавить" Click="Add_Click" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</Window>
