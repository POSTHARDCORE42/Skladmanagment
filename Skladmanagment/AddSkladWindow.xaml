<Window x:Class="Skladmanagment.AddSkladWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skladmanagment"
        mc:Ignorable="d"
        Title="Добавить склад" Height="160" Width="800" ResizeMode="NoResize">
    <Grid Margin="0,0,0,304">
        <StackPanel Margin="5,10,15,-124">
            <TextBox x:Name="txtName" Margin="0 0 0 10" Text="Наименование" />
            <TextBox x:Name="txtAddress" Margin="0 0 0 10" Text="Адрес" />
            <TextBox x:Name="txtKladov" Margin="0 0 0 10" Text="Кладовщик" />

            <Button Content="Добавить" Click="Add_Click" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</Window>
